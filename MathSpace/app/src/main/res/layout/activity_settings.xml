<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">


        <ScrollView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true">

                <LinearLayout android:orientation="vertical" android:layout_height="wrap_content"
                              android:layout_width="match_parent">

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Even numbers"

                        />


                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Odd numbers"
                        />

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers greater than"
                        />

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers greater or equal to"
                        />

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers lower then"
                        />

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers lower or equal to"
                        />

                        <Switch android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers lower or equal to"
                        />


                        <Button android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save settings"/>

                        <Button android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clear settings"/>



                </LinearLayout>
        </ScrollView>








</RelativeLayout>
